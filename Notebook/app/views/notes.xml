					<Button id="savetonotes" class="h4 span-width top-buffer" textid="bookmarkBtn" onClick="onSaveBtnClick">Save</Button>
					<Button id="savetonotes" class="h4 span-width top-buffer" textid="bookmarkBtn" onClick="onDeleteBtnClick">Delete</Button>
			</View>
